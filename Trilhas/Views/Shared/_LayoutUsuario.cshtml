@using Microsoft.AspNetCore.Identity

@inject UserManager<IdentityUser> UserManager

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Trilhas de Aprendizagem – ESESP</title>

    <environment include="Development">
        <script type="text/javascript" src="~/lib/jquery/dist/jquery.min.js"></script>
        <script type="text/javascript" src="~/lib/popup-master/assets/js/jquery.popup.js"></script>
        <script type="text/javascript" src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>

        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/lib/font-awesome/css/all.css">
        <link rel="stylesheet" href="~/lib/popup-master/assets/css/popup.css" />

        <link rel="stylesheet" href="~/css/usuario.css">
    </environment>
    <environment exclude="Development">
        <script type="text/javascript" src="~/lib/jquery/dist/jquery.min.js"></script>
        <script type="text/javascript" src="~/lib/popup-master/assets/js/jquery.popup.min.js"></script>
        <script type="text/javascript" src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>

        <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
        <link href="~/lib/font-awesome/css/all.min.css" rel="stylesheet" />
        <link href="~/lib/popup-master/assets/css/popup.css" rel="stylesheet" />

        <link rel="stylesheet" href="~/css/usuario.css" asp-append-version="true">
    </environment>
</head>

<body>
    <app>
        <app-navbar>
            <header>
                <nav class="navbar navbar-expand-md navbar-dark fixed-top nav-trilhas">
                    <div class="container">
                        <h1 class="navbar-brand mb-0 mt-1">
                            <a itemprop="url" title="Logo ESESP">
                                <img alt="Logo ESESP" src="~/images/usuario/marca-esesp-branca.svg" width="32px">
                            </a>
                        </h1>
                        <a class="navbar-brand" href="/home/Index">
                            Trilhas de <span class="d-block d-sm-none"><br></span> Aprendizagem
                        </a>
                        <ul class="navbar-nav ml-auto">
                            <li class="nav-item dropdown menu-usuario pull-right">
                                <a aria-expanded="false" aria-haspopup="true" class="nav-link dropdown-toggle btn btn-2 btn-sm hidden-when-767" data-toggle="dropdown" href="#" role="button">@UserManager.GetUserName(User)</a>
                                <a aria-expanded="false" aria-haspopup="true" class="nav-link dropdown-toggle btn btn-2 btn-sm display-when-767" data-toggle="dropdown" href="#" role="button" style="display: none">Menu</a>
                                <div class="dropdown-menu mb-2">
                                    <a class="dropdown-item" asp-controller="home" asp-action="VisualizarTrilha">
                                        Acessar Minha Trilha
                                    </a>
                                    <a class="dropdown-item" asp-controller="home" asp-action="VisualizarCertificados">
                                        Visualizar Certificados
                                    </a>
                                    @if (User.IsInRole("Administrador"))
                                    {
                                        <a class="dropdown-item" asp-controller="admin" asp-action="index">
                                            Administração
                                        </a>
                                    }
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" asp-controller="account" asp-action="logout">Sair</a>
                                </div>
                            </li>
                        </ul>
                    </div>
                </nav>
            </header>
        </app-navbar>
        <main role="main">
            <router-outlet></router-outlet>
            <app-main _nghost-c2="">
                <div class="linha-trilhas-oferta"></div>
                <section class="section-oferta-1">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-9 pr-5 suporte-escuro">
                                <h4 class=" mt-7 pb-0 mb-0 w-600">Aqui, você é o autor de sua trilha de aprendizagem!</h4>
                                <h4 class="mt-4 mb-7">Navegue por nossos Eixos e Estações, não esqueça de checar se a solução educacional escolhida está disponível.</h4>
                            </div>
                            <div class="col-md-3 menina-pendurada">
                                <img src="~/images/usuario/menina_pendurada.svg" width="70%">
                            </div>
                        </div>
                    </div>
                </section>

                @RenderBody()

            </app-main>
        </main>

        <!--RODAPÉ-->
        <app-footer _nghost-c0="">
            <section class="section-footer">
                <footer class="mt-4">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-2 col-4 text-center">
                                <img src="~/images/usuario/principal/Brasao_Governo_320.png" width="76%">
                            </div>
                            <div class="col-md-10 text-right small mt-4">
                                <p>Projeto Trilhas de Aprendizagem ESESP<br> Rua FERNANDO Fundão, 155 – Morada de Camburi <br> CEP: 29062-545 - Vitória / ES</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 text-right small"> 2018 – 2019 • Desenvolvido pelo Grupo de Aprendizagem, na ESESP. </div>
                        </div>
                    </div>
                </footer>
            </section>

            <div aria-hidden="true" aria-labelledby="login-cadastre-se" class="modal fade" id="target-login-cadastre-se" role="dialog" tabindex="-1">
                <div class="modal-dialog modal-dialog-centered modal-md" role="document">
                    <div class="modal-content">
                        <div class="modal-header pb-0 pt-2">
                            <h4 class="modal-title suporte-escuro w-600 ">Faça seu login</h4>
                            <button aria-label="Close" class="close" data-dismiss="modal" type="button">
                                <span aria-hidden="true">×</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <alert></alert>
                            <div class="modal-inner-white-login pt-4 text-center">
                                <p>Para prosseguir, coloque seus dados de login ou cadastre-se.</p>
                                <form novalidate="" class="ng-dirty ng-touched ng-valid">
                                    <div class="input-group input-group-md mb-2">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text" id="inputGroup-sizing-sm">
                                                <i class="fas fa-user-circle">
                                                </i>
                                            </span>
                                        </div>
                                        <input aria-describedby="inputGroup-sizing-sm" aria-label="Sizing example input" class="form-control ng-dirty ng-valid ng-touched" formcontrolname="cpf" placeholder="cpf" type="text">
                                    </div>
                                    <div class="input-group input-group-md mb-3">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="fas fa-key">
                                                </i>
                                            </span>
                                        </div>
                                        <input class="form-control ng-dirty ng-valid ng-touched" formcontrolname="pw" placeholder="senha" type="password">
                                    </div>
                                    <button class="btn btn-3 btn-sm text-uppercase pl-5 pr-5">Entrar</button>
                                </form>
                                <p class="small mt-1">
                                    ou <a aria-controls="multiCollapseExample1" aria-expanded="false" data-toggle="collapse" href="#multiCollapseExample1" role="button">cadastre-se</a>
                                </p>
                                <div class="collapse multi-collapse" id="multiCollapseExample1">
                                    <div class="card card-body">
                                        <p>Qual o seu perfil profissional?</p>
                                        <button class="btn btn-3 btn-sm text-uppercase pl-5 pr-5 mb-2" data-dismiss="modal" tabindex="0">Servidor Estadual</button>
                                        <button class="btn btn-3 btn-sm text-uppercase pl-5 pr-5 mb-2" data-dismiss="modal" tabindex="0">Servidor Municipal</button>
                                        <button class="btn btn-3 btn-sm text-uppercase pl-5 pr-5 mb-2" data-dismiss="modal" tabindex="0">Integrante de OSC</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </app-footer>
    </app>
    <app-footer></app-footer>
</body>
</html>