@{
    ViewData["Title"] = "Development Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h3 class="mb-0">
                        <i class="fas fa-code"></i> Development Mode Login
                    </h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <h5 class="alert-heading">⚠️ Local Development Mode</h5>
                        <p class="mb-0">
                            This is a simplified login for localhost development only.<br/>
                            <strong>Acesso Cidadão (gov.br) authentication is BYPASSED.</strong>
                        </p>
                    </div>
                    
                    <form method="post" action="/Account/LocalLogin">
                        <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />
                        
                        <div class="form-group">
                            <label for="username">
                                <i class="fas fa-user"></i> Username:
                            </label>
                            <input type="text" 
                                   class="form-control" 
                                   id="username" 
                                   name="username" 
                                   placeholder="Enter any username" 
                                   value="TestAdmin"
                                   required />
                            <small class="form-text text-muted">
                                This will be your display name in the application
                            </small>
                        </div>

                        <div class="form-group">
                            <label for="role">
                                <i class="fas fa-user-tag"></i> Select Role:
                            </label>
                            <select class="form-control" id="role" name="role">
                                <option value="">Regular User (No Admin Rights)</option>
                                <option value="admin">Administrador</option>
                                <option value="secretaria">Secretaria</option>
                                <option value="gestor">Gestor</option>
                                <option value="coordenador">Coordenador</option>
                                <option value="all" selected>All Roles (Full Access)</option>
                            </select>
                            <small class="form-text text-muted">
                                Select the role you want to test with
                            </small>
                        </div>
                        
                        <button type="submit" class="btn btn-primary btn-block">
                            <i class="fas fa-sign-in-alt"></i> Login as Test User
                        </button>
                    </form>
                    
                    <hr/>
                    
                    <div class="card bg-light">
                        <div class="card-body">
                            <h6 class="card-title">Available Test Roles:</h6>
                            <ul class="small mb-0">
                                <li><strong>Administrador:</strong> Full system administration</li>
                                <li><strong>Secretaria:</strong> Secretary access</li>
                                <li><strong>Gestor:</strong> Manager access</li>
                                <li><strong>Coordenador:</strong> Coordinator access</li>
                                <li><strong>All Roles:</strong> Combined access for testing</li>
                            </ul>
                        </div>
                    </div>

                    <div class="text-center mt-3">
                        <small class="text-danger">
                            <i class="fas fa-exclamation-triangle"></i>
                            This login method is NOT available in production
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 10px;
    }
    .card-header {
        border-radius: 10px 10px 0 0;
    }
    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }
    .btn-primary:hover {
        background-color: #0056b3;
        border-color: #0056b3;
    }
</style>