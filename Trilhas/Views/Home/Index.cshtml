@model IEnumerable<Trilhas.Models.Usuario.EixoEstacoesViewModel>
@{
    Layout = "_LayoutUsuario";
}

<section class="section-oferta-eixo-estacoes suporte-claro">
	<!--LISTAGEM DE EIXOS-->
	<div class="container">
		@foreach(var eixoEstacoes in Model)
		{
			<div class="row row-eixo">
				<div class="col-lg-4 col-md-4">
                    <div class="eixo-title d-flex align-items-center">
                        @if (!string.IsNullOrEmpty(eixoEstacoes.Eixo.Imagem))
                        {
                            <img class="eixo-icon" src="data:image/jpeg;base64,@eixoEstacoes.Eixo.Imagem" />
                        }
                        else
                        {
                            <img class="eixo-icon" src="data:image/jpeg;base64," />
                        }
                        <div class="desc">
                            <h3 class="hover-tr">@Html.DisplayFor(modelItem => eixoEstacoes.Eixo.Nome)</h3>
                        </div>
                    </div>
				</div>
				<div class="col-lg-8 col-md-8 align-self-center">
					@*<div class="gap-eixo-estacoes d-none d-sm-block d-md-block">
					</div>*@
					@* Listagem de Estacoes *@
					<div class="row">
						@foreach(var estacao in eixoEstacoes.Estacoes)
						{
							<div class="col-lg-4 col-md-6 col-solucao-title">
								<a asp-action="EscolhaSolucao"
								   asp-route-estacaoId="@estacao.Id">
									@Html.DisplayFor(modelItem => estacao.Nome)
									@if(estacao.Selecionado)
									{
										<i class="fas fa-check-circle"></i>
									}
								</a>
							</div>
						}
					</div>
				</div>
			</div>
		}
	</div>
</section>