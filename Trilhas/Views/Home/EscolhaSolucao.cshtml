@model Trilhas.Models.Usuario.EstacaoSolucoesViewModel
@{
	Layout = "_LayoutUsuario";
}

<section class="section-breadcrumbs">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<p class="open-sans mb-0 w-400 color-azul-2 p-breadcrumbs">
					@Model.EixoNome <i class="fas fa-arrow-right color-laranja-1"></i> @Model.EstacaoNome
				</p>
			</div>
		</div>
	</div>
</section>
<section class="section-oferta-estacao-solucoes suporte-claro">
	<div class="container">
		<div class="row row-solucao">
			<div class="col-md-12">
                <div class="eixo-title">
                    @if (!string.IsNullOrEmpty(Model.EixoImagem))
                    {
                        <img class="eixo-icon" src="data:image/jpeg;base64,@Model.EixoImagem" />
                    }
                    else
                    {
                        <img class="eixo-icon" src="data:image/jpeg;base64," />
                    }
                    <div class="desc">
                        <h5 class="color-laranja-1 w-600 mb-2">@Model.EixoNome</h5>
                        <h3 class="hover-tr text-uppercase mb-4">@Model.EstacaoNome</h3>
                        <p></p>
                    </div>
                </div>
			</div>
		</div>
		<div class="row">
			<div class="col-lg-10 offset-md-1">
				<div class="solucoes-content" style="z-index: 9999 !important;">
					<div class="LISTA-SOLUCOES" id="LISTA-SOLUCOES">
						<div class="card mt-2">
							@foreach(var solucao in Model.Solucoes)
							{
								if(solucao.TipoDeSolucao == "curso")
								{
									<div>
										<div>
											<div aria-expanded="false" class="card-header collapsed" data-parent="#LISTA-SOLUCOES" data-toggle="collapse" href="#@solucao.Id">
												<a class="card-title">
													<i class="fas fa-chalkboard-teacher fa-icone-tipo-de-solucao"></i> Curso - 
													<small>@solucao.Titulo</small>
												</a>
												@if(solucao.Selecionado)
												{
													<i class="fas fa-check-circle"></i>
												}
											</div>
											<div class="in collapse" data-parent="#LISTA-SOLUCOES" id="@solucao.Id">
												<div class="card-body">
													<h6>Título:</h6><p>@solucao.Titulo</p>
													<h6>Ementa:</h6><p>@solucao.ConteudoProgramatico</p>
													<h6>Carga horária:</h6><p>@solucao.CargaHorariaTotal</p>
													<h6>Modalidade:</h6><p>@solucao.Modalidade</p>
													<h6>Habilidades:</h6>
													<ol>
														@foreach(var habilidade in solucao.Habilidades)
														{
															<li>@habilidade</li>
														}
													</ol>
													<h6>Público alvo:</h6><p>@solucao.PublicoAlvo</p>
													@if(!solucao.Selecionado)
													{
														<a class="btn btn-3 btn-sm mt-2 mb-2 w-600"
														   asp-action="AdicionarTrilha"
														   asp-route-solucaoId="@solucao.Id">
															<i class="fas fa-plus-circle"></i>Adicionar à minha trilha
														</a>
													}
												</div>
											</div>
										</div>
									</div>

								} else if(solucao.TipoDeSolucao == "livro")
								{
									<div>
										<div>
											<div aria-expanded="false" class="card-header collapsed" data-parent="#LISTA-SOLUCOES" data-toggle="collapse" href="#@solucao.Id">
                                                <a class="card-title">
                                                    <i class="fas fa-book-open fa-icone-tipo-de-solucao"></i> Livro/Artigo - 
                                                    <small>@solucao.Titulo</small>
                                                </a>
												@if(solucao.Selecionado)
												{
													<i class="fas fa-check-circle"></i>
												}
											</div>
											<div class="in collapse" data-parent="#LISTA-SOLUCOES" id="@solucao.Id">
												<div class="card-body">
													<h6>Título:</h6><p>@solucao.Titulo</p>
													<h6>Autor:</h6><p>@solucao.Autor</p>
													<h6>Ano:</h6><p>@solucao.DataPublicacao</p>
													<h6>Url:</h6><p><a href="@solucao.Url" target="_blank">@solucao.Url</a></p>
													@if(!solucao.Selecionado)
													{
														<a class="btn btn-3 btn-sm mt-2 mb-2 w-600"
														   asp-action="AdicionarTrilha"
														   asp-route-solucaoId="@solucao.Id">
															<i class="fas fa-plus-circle"></i>Adicionar à minha trilha
														</a>
													}
												</div>
											</div>
										</div>
									</div>

								} else if(solucao.TipoDeSolucao == "video")
								{
									<div>
										<div>
											<div aria-expanded="false" class="card-header collapsed" data-parent="#LISTA-SOLUCOES" data-toggle="collapse" href="#@solucao.Id">
                                                <a class="card-title">
                                                    <i class="fas fa-video fa-icone-tipo-de-solucao"></i> Vídeo - 
                                                    <small>@solucao.Titulo</small>
                                                </a>
												@if(solucao.Selecionado)
												{
													<i class="fas fa-check-circle"></i>
												}
											</div>
											<div class="in collapse" data-parent="#LISTA-SOLUCOES" id="@solucao.Id">
												<div class="card-body">
													<h6>Título:</h6><p>@solucao.Titulo</p>
													<h6>Autor:</h6><p>@solucao.Responsavel</p>
													<h6>Palestrante:</h6><p>@solucao.Responsavel</p>
													<h6>Duração:</h6><p>@solucao.Duracao</p>
													<h6>Data Produção:</h6><p>@solucao.DataProducao</p>
													<h6>Url:</h6><p><a href="@solucao.Url" target="_blank">@solucao.Url</a></p>
													@if(!solucao.Selecionado)
													{
														<a class="btn btn-3 btn-sm mt-2 mb-2 w-600"
														   asp-action="AdicionarTrilha"
														   asp-route-solucaoId="@solucao.Id">
															<i class="fas fa-plus-circle"></i> Adicionar à minha trilha
														</a>
													}
												</div>
											</div>
										</div>
									</div>
								}
							}
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="row mb-6">
			<div class="col-md-12 text-center">
				<a class="btn btn-1 btn-lg mt-5 text-uppercase" asp-controller="home" asp-action="index"
				   routerlinkactive="router-link-active"
				   tabindex="0">
					<span class="small">
						<b>
							<i class="fas fa-arrow-left mr-2"></i> voltar
						</b>
					</span>
				</a>
			</div>
		</div>
	</div>
</section>
