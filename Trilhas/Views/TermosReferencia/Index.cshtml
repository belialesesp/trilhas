@{
    ViewData["Title"] = "Termos de Referência";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-file-contract"></i> Gerenciar Termos de Referência
                    </h4>
                </div>
                <div class="card-body">
                    <!-- Upload Section -->
                    <div class="row mb-4">
                        <div class="col-md-12">
                            <div class="card border-info">
                                <div class="card-header bg-info text-white">
                                    <h5 class="mb-0"><i class="fas fa-upload"></i> Upload de Novo Termo</h5>
                                </div>
                                <div class="card-body">
                                    <form id="uploadForm" enctype="multipart/form-data">
                                        <div class="row">
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label for="anoTermo">Ano *</label>
                                                    <input type="number" 
                                                           class="form-control" 
                                                           id="anoTermo" 
                                                           name="ano" 
                                                           min="2020" 
                                                           max="2050" 
                                                           value="@DateTime.Now.Year" 
                                                           required>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label for="fileUpload">Documento (.docx) *</label>
                                                    <input type="file" 
                                                           class="form-control-file" 
                                                           id="fileUpload" 
                                                           name="file" 
                                                           accept=".docx" 
                                                           required>
                                                    <small class="form-text text-muted">
                                                        Apenas arquivos .docx do Microsoft Word são aceitos
                                                    </small>
                                                </div>
                                            </div>
                                            <div class="col-md-2">
                                                <label>&nbsp;</label>
                                                <button type="submit" class="btn btn-success btn-block">
                                                    <i class="fas fa-cloud-upload-alt"></i> Processar
                                                </button>
                                            </div>
                                        </div>
                                    </form>
                                    <div id="uploadProgress" class="mt-3" style="display: none;">
                                        <div class="progress">
                                            <div class="progress-bar progress-bar-striped progress-bar-animated" 
                                                 role="progressbar" 
                                                 style="width: 100%">
                                                Processando documento...
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Filters -->
                    <div class="row mb-3">
                        <div class="col-md-3">
                            <label for="filtroAno">Ano</label>
                            <select class="form-control" id="filtroAno">
                                <option value="">Todos</option>
                                @for (int year = DateTime.Now.Year; year >= 2020; year--)
                                {
                                    <option value="@year">@year</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label for="filtroStatus">Status</label>
                            <select class="form-control" id="filtroStatus">
                                <option value="">Todos</option>
                                <option value="Rascunho">Rascunho</option>
                                <option value="Aprovado">Aprovado</option>
                                <option value="Em Execução">Em Execução</option>
                                <option value="Concluído">Concluído</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label for="filtroExcluidos">Mostrar Excluídos</label>
                            <select class="form-control" id="filtroExcluidos">
                                <option value="false">Não</option>
                                <option value="true">Sim</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label>&nbsp;</label>
                            <button type="button" class="btn btn-primary btn-block" onclick="buscarTermos()">
                                <i class="fas fa-search"></i> Buscar
                            </button>
                        </div>
                    </div>

                    <!-- Results Table -->
                    <div class="table-responsive">
                        <table class="table table-striped table-hover" id="tabelaTermos">
                            <thead class="thead-dark">
                                <tr>
                                    <th>Ano</th>
                                    <th>Título</th>
                                    <th>Nº Documento</th>
                                    <th>Status</th>
                                    <th>Data Criação</th>
                                    <th>Itens</th>
                                    <th>Valor Total</th>
                                    <th>Ações</th>
                                </tr>
                            </thead>
                            <tbody id="corpoTabela">
                                <tr>
                                    <td colspan="8" class="text-center">
                                        <em>Nenhum termo encontrado. Use os filtros acima ou faça upload de um novo documento.</em>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    <!-- Pagination -->
                    <div class="row mt-3">
                        <div class="col-md-12">
                            <nav>
                                <ul class="pagination justify-content-center" id="paginacao">
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
    let paginaAtual = 0;
    const itensPorPagina = 10;

    $(document).ready(function() {
        buscarTermos();

        // Upload form handler
        $('#uploadForm').on('submit', function(e) {
            e.preventDefault();
            
            const formData = new FormData(this);
            
            $('#uploadProgress').show();
            
            $.ajax({
                url: '/TermosReferencia/Upload',
                type: 'POST',
                data: formData,
                processData: false,
                contentType: false,
                success: function(response) {
                    $('#uploadProgress').hide();
                    toastr.success(response.message);
                    $('#uploadForm')[0].reset();
                    buscarTermos();
                    
                    // Redirect to details page
                    if (response.termoId) {
                        setTimeout(function() {
                            window.location.href = '/TermosReferencia/Detalhes/' + response.termoId;
                        }, 1500);
                    }
                },
                error: function(xhr) {
                    $('#uploadProgress').hide();
                    const error = xhr.responseJSON?.message || 'Erro ao processar o documento';
                    toastr.error(error);
                }
            });
        });
    });

    function buscarTermos() {
        const ano = $('#filtroAno').val();
        const status = $('#filtroStatus').val();
        const excluidos = $('#filtroExcluidos').val() === 'true';
        
        const start = paginaAtual * itensPorPagina;
        
        $.ajax({
            url: '/TermosReferencia/Buscar',
            type: 'GET',
            data: {
                ano: ano || null,
                status: status || null,
                excluidos: excluidos,
                start: start,
                count: itensPorPagina
            },
            success: function(data) {
                renderizarTabela(data);
                atualizarPaginacao();
            },
            error: function() {
                toastr.error('Erro ao buscar termos de referência');
            }
        });
    }

    function renderizarTabela(termos) {
        const tbody = $('#corpoTabela');
        tbody.empty();
        
        if (termos.length === 0) {
            tbody.append(`
                <tr>
                    <td colspan="8" class="text-center">
                        <em>Nenhum termo encontrado com os filtros selecionados.</em>
                    </td>
                </tr>
            `);
            return;
        }
        
        termos.forEach(function(termo) {
            const statusBadge = getStatusBadge(termo.status);
            const valorFormatado = formatarMoeda(termo.valorTotal);
            
            const row = `
                <tr>
                    <td>${termo.ano}</td>
                    <td>${termo.titulo}</td>
                    <td>${termo.numeroDocumento || '-'}</td>
                    <td>${statusBadge}</td>
                    <td>${termo.dataCriacao}</td>
                    <td class="text-center">${termo.totalItens}</td>
                    <td class="text-right">${valorFormatado}</td>
                    <td>
                        <button class="btn btn-sm btn-info" onclick="verDetalhes(${termo.id})" title="Ver Detalhes">
                            <i class="fas fa-eye"></i>
                        </button>
                        <button class="btn btn-sm btn-danger" onclick="excluirTermo(${termo.id})" title="Excluir">
                            <i class="fas fa-trash"></i>
                        </button>
                    </td>
                </tr>
            `;
            tbody.append(row);
        });
    }

    function getStatusBadge(status) {
        const badges = {
            'Rascunho': 'badge-secondary',
            'Aprovado': 'badge-success',
            'Em Execução': 'badge-primary',
            'Concluído': 'badge-info'
        };
        const badgeClass = badges[status] || 'badge-secondary';
        return `<span class="badge ${badgeClass}">${status}</span>`;
    }

    function formatarMoeda(valor) {
        return new Intl.NumberFormat('pt-BR', {
            style: 'currency',
            currency: 'BRL'
        }).format(valor);
    }

    function atualizarPaginacao() {
        // Simplified pagination - you can enhance this based on total count
        const paginacao = $('#paginacao');
        paginacao.empty();
        
        if (paginaAtual > 0) {
            paginacao.append(`
                <li class="page-item">
                    <a class="page-link" href="#" onclick="mudarPagina(${paginaAtual - 1}); return false;">Anterior</a>
                </li>
            `);
        }
        
        paginacao.append(`
            <li class="page-item active">
                <span class="page-link">Página ${paginaAtual + 1}</span>
            </li>
        `);
        
        paginacao.append(`
            <li class="page-item">
                <a class="page-link" href="#" onclick="mudarPagina(${paginaAtual + 1}); return false;">Próxima</a>
            </li>
        `);
    }

    function mudarPagina(novaPagina) {
        paginaAtual = novaPagina;
        buscarTermos();
    }

    function verDetalhes(id) {
        window.location.href = '/TermosReferencia/Detalhes/' + id;
    }

    function excluirTermo(id) {
        if (!confirm('Tem certeza que deseja excluir este Termo de Referência?')) {
            return;
        }
        
        $.ajax({
            url: '/TermosReferencia/Excluir?id=' + id,
            type: 'DELETE',
            success: function(response) {
                toastr.success(response.message);
                buscarTermos();
            },
            error: function(xhr) {
                const error = xhr.responseJSON?.message || 'Erro ao excluir termo';
                toastr.error(error);
            }
        });
    }
</script>
}
