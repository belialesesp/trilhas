@{
    ViewData["Title"] = "Termos de Referência";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-file-contract"></i> Gerenciar Termos de Referência
                    </h4>
                </div>
                <div class="card-body">
                    <!-- Upload Section -->
                    <div class="row mb-4">
                        <div class="col-md-12">
                            <div class="card border-info">
                                <div class="card-header bg-info text-white">
                                    <h5 class="mb-0"><i class="fas fa-upload"></i> Upload de Novo Termo</h5>
                                </div>
                                <div class="card-body">
                                    <div class="alert alert-info">
                                        <strong><i class="fas fa-info-circle"></i> Instruções:</strong>
                                        <ul class="mb-0 mt-2">
                                            <li>Faça upload do documento PDF do Termo de Referência</li>
                                            <li>O sistema irá extrair automaticamente as informações do demandante, cursos e profissionais necessários</li>
                                            <li>Após o processamento, você poderá editar todos os campos extraídos</li>
                                            <li>O sistema monitorará automaticamente cursos que iniciam em até 15 dias e ainda precisam de contratações</li>
                                        </ul>
                                    </div>

                                    <form id="uploadForm" enctype="multipart/form-data">
                                        <div class="row">
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label for="anoTermo">Ano *</label>
                                                    <input type="number" 
                                                           class="form-control" 
                                                           id="anoTermo" 
                                                           name="ano" 
                                                           min="2020" 
                                                           max="2050" 
                                                           value="@DateTime.Now.Year" 
                                                           required />
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label for="arquivoTermo">Arquivo PDF *</label>
                                                    <input type="file" 
                                                           class="form-control-file" 
                                                           id="arquivoTermo" 
                                                           name="file" 
                                                           accept=".pdf"
                                                           required />
                                                    <small class="form-text text-muted">
                                                        Formato aceito: PDF (até 10MB)
                                                    </small>
                                                </div>
                                            </div>
                                            <div class="col-md-2">
                                                <label>&nbsp;</label>
                                                <button type="submit" class="btn btn-primary btn-block">
                                                    <i class="fas fa-upload"></i> Upload
                                                </button>
                                            </div>
                                        </div>
                                    </form>

                                    <div id="uploadProgress" style="display:none;" class="mt-3">
                                        <div class="progress">
                                            <div class="progress-bar progress-bar-striped progress-bar-animated" 
                                                 role="progressbar" 
                                                 style="width: 100%">
                                                Processando documento...
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Filters -->
                    <div class="row mb-3">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label for="filtroAno">Ano</label>
                                <select class="form-control" id="filtroAno" onchange="buscarTermos()">
                                    <option value="">Todos</option>
                                    @for (int i = DateTime.Now.Year; i >= 2020; i--)
                                    {
                                        <option value="@i">@i</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label for="filtroStatus">Status</label>
                                <select class="form-control" id="filtroStatus" onchange="buscarTermos()">
                                    <option value="">Todos</option>
                                    <option value="Rascunho">Rascunho</option>
                                    <option value="Aprovado">Aprovado</option>
                                    <option value="Em Execução">Em Execução</option>
                                    <option value="Concluído">Concluído</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label for="filtroExcluidos">Exibir</label>
                                <select class="form-control" id="filtroExcluidos" onchange="buscarTermos()">
                                    <option value="false">Ativos</option>
                                    <option value="true">Excluídos</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <label>&nbsp;</label>
                            <button class="btn btn-secondary btn-block" onclick="limparFiltros()">
                                <i class="fas fa-eraser"></i> Limpar Filtros
                            </button>
                        </div>
                    </div>

                    <!-- Table -->
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="thead-dark">
                                <tr>
                                    <th>Título</th>
                                    <th>Demandante</th>
                                    <th>Ano</th>
                                    <th>Status</th>
                                    <th>Data Criação</th>
                                    <th>Itens</th>
                                    <th>Valor Total</th>
                                    <th>Ações</th>
                                </tr>
                            </thead>
                            <tbody id="corpoTabela">
                                <tr>
                                    <td colspan="8" class="text-center">
                                        <em>Carregando...</em>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    <!-- Pagination -->
                    <div class="row mt-3">
                        <div class="col-md-12">
                            <nav>
                                <ul class="pagination justify-content-center" id="paginacao">
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
    let paginaAtual = 0;
    const itensPorPagina = 10;

    $(document).ready(function() {
        buscarTermos();

        // Upload form handler
        $('#uploadForm').on('submit', function(e) {
            e.preventDefault();
            
            const formData = new FormData(this);
            
            $('#uploadProgress').show();
            
            $.ajax({
                url: '/TermosReferencia/Upload',
                type: 'POST',
                data: formData,
                processData: false,
                contentType: false,
                success: function(response) {
                    $('#uploadProgress').hide();
                    toastr.success(response.message);
                    $('#uploadForm')[0].reset();
                    buscarTermos();
                    
                    // Redirect to details page
                    if (response.termoId) {
                        setTimeout(function() {
                            window.location.href = '/TermosReferencia/Detalhes/' + response.termoId;
                        }, 1500);
                    }
                },
                error: function(xhr) {
                    $('#uploadProgress').hide();
                    const error = xhr.responseJSON?.message || 'Erro ao processar o documento';
                    toastr.error(error);
                }
            });
        });
    });

    function buscarTermos() {
        const ano = $('#filtroAno').val();
        const status = $('#filtroStatus').val();
        const excluidos = $('#filtroExcluidos').val() === 'true';
        
        const start = paginaAtual * itensPorPagina;
        
        $.ajax({
            url: '/TermosReferencia/Buscar',
            type: 'GET',
            data: {
                ano: ano || null,
                status: status || null,
                excluidos: excluidos,
                start: start,
                count: itensPorPagina
            },
            success: function(data) {
                renderizarTabela(data);
                atualizarPaginacao();
            },
            error: function() {
                toastr.error('Erro ao buscar termos de referência');
            }
        });
    }

    function renderizarTabela(termos) {
        const tbody = $('#corpoTabela');
        tbody.empty();
        
        if (termos.length === 0) {
            tbody.append(`
                <tr>
                    <td colspan="8" class="text-center">
                        <em>Nenhum termo encontrado. Use os filtros acima ou faça upload de um novo documento.</em>
                    </td>
                </tr>
            `);
            return;
        }

        termos.forEach(termo => {
            const statusBadge = getStatusBadge(termo.status);
            const tr = $(`
                <tr>
                    <td>${termo.titulo}</td>
                    <td>${termo.demandante || '-'}</td>
                    <td>${termo.ano}</td>
                    <td>${statusBadge}</td>
                    <td>${termo.dataCriacao}</td>
                    <td><span class="badge badge-info">${termo.numeroItens}</span></td>
                    <td>R$ ${termo.valorTotal.toLocaleString('pt-BR', {minimumFractionDigits: 2})}</td>
                    <td>
                        <a href="/TermosReferencia/Detalhes/${termo.id}" 
                           class="btn btn-sm btn-primary" 
                           title="Ver Detalhes">
                            <i class="fas fa-eye"></i>
                        </a>
                        <button class="btn btn-sm btn-danger" 
                                onclick="excluirTermo(${termo.id})" 
                                title="Excluir">
                            <i class="fas fa-trash"></i>
                        </button>
                    </td>
                </tr>
            `);
            
            tbody.append(tr);
        });
    }

    function getStatusBadge(status) {
        const badges = {
            'Rascunho': '<span class="badge badge-secondary">Rascunho</span>',
            'Aprovado': '<span class="badge badge-success">Aprovado</span>',
            'Em Execução': '<span class="badge badge-primary">Em Execução</span>',
            'Concluído': '<span class="badge badge-dark">Concluído</span>'
        };
        return badges[status] || '<span class="badge badge-secondary">' + status + '</span>';
    }

    function atualizarPaginacao() {
        // Simplified pagination - you can enhance this
        const paginacao = $('#paginacao');
        paginacao.empty();
        
        if (paginaAtual > 0) {
            paginacao.append(`
                <li class="page-item">
                    <a class="page-link" href="#" onclick="mudarPagina(${paginaAtual - 1}); return false;">Anterior</a>
                </li>
            `);
        }
        
        paginacao.append(`
            <li class="page-item active">
                <span class="page-link">Página ${paginaAtual + 1}</span>
            </li>
        `);
        
        paginacao.append(`
            <li class="page-item">
                <a class="page-link" href="#" onclick="mudarPagina(${paginaAtual + 1}); return false;">Próxima</a>
            </li>
        `);
    }

    function mudarPagina(novaPagina) {
        if (novaPagina < 0) return;
        paginaAtual = novaPagina;
        buscarTermos();
    }

    function limparFiltros() {
        $('#filtroAno').val('');
        $('#filtroStatus').val('');
        $('#filtroExcluidos').val('false');
        paginaAtual = 0;
        buscarTermos();
    }

    function excluirTermo(id) {
        if (!confirm('Tem certeza que deseja excluir este termo de referência?')) {
            return;
        }

        $.ajax({
            url: '/TermosReferencia/Excluir',
            type: 'DELETE',
            data: { id: id },
            success: function() {
                toastr.success('Termo excluído com sucesso!');
                buscarTermos();
            },
            error: function(xhr) {
                const error = xhr.responseJSON?.message || 'Erro ao excluir termo';
                toastr.error(error);
            }
        });
    }
</script>
}
